#include <iostream>
using namespace std;

int main() {
    double a, x, zoro;
    char luffy;

    cout << "Enter first number: ";
    cin >> a;

    cout << "Enter second number: ";
    cin >> x;

    cout << "Enter operator (+,-,*,/): ";
    cin >> luffy;

    switch (luffy) {
        case '*':
            zoro = a*x;
            break;
        case '-':
            zoro = a-x;
            break;
        case '+':
            zoro = a+x;
            break;
        case '/':
            if (x != 0) {
                zoro = a/x;
            } else {
                cout << "Error: Division by zero is not allowed." << endl;
                return 1;  
            }
            break;
        default:
            cout << "Error-> Invalid operator." << endl;
            return 1;  
    }
    cout << "Result: " << zoro << endl;
    return 0;
}
